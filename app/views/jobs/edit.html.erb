<div class="page-header">
  <h1>Editing Job #<%= @job.id %></h1>
</div>

<%= form_tag(job_url(@job), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :company_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :company_name, @job.company_id, class: 'form-control' %>
      <%#= select_tag :company_id, options_from_collection_for_select(Company.all, :id, :name, @job.company_id), :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, @job.title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :industry, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :industry, @job.industry, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :function, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :function, @job.function, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :budget, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :budget, @job.budget, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, @job.description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :location, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :location, @job.location, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :start_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :start_date, @job.start_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :end_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :end_date, @job.end_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :hours_per_week, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :hours_per_week, @job.hours_per_week, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :status, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :status, 1, @job.status? %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Job", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
